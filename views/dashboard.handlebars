{{!-- User dashboard --}}
<div class="container">
    <div class="row">
        <div class="text-center user-name">
            <h2 id="blodName">{{name}}'s Blog</h2>
        </div>
    </div>
    <div class="text-center">
        <div class="container">
            <div class="row">
                <div class="col-med-10 text-left">
                    {{#if blogPosts.length}}
                        {{#each blogPosts as |blogPost| }}
                            {{> dashboardPost blogPost}}
                            <br>
                        {{/each}}
                    {{/if}}
                </div>
            </div>
        </div>
        {{#if (is_my_page user.id userId)}}
        <div class="container">
            <div class="row text-center">
                <a href="/create">
                    <button class="btn btn-dark mt-3">Create a post!</button>
                </a>
                <br>
                <br>
                <br>
                <br>
            </div>
        </div>
        {{else}}
        <div class="container">
            <div class="row justify-content-center">
                <p>This user has not created any posts yet!</p>
            </div>
        </div>
        {{/if}}
    </div>
</div>

<script src="../public/js/dashboard.js"></script>
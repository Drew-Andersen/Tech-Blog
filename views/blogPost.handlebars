{{!-- Blog Post Page --}}
<div class="container">
    <div class="row">
        <div class="card shadow text-dark mb-3 blogPost-main">
            <div class="text-center mx-auto p-3">
                <h2>{{title}}</h2>
                <p>Created by: {{user.name}} on {{format_date date_created}}</p>
                <p>{{description}}</p>
                <button id="editBtn" class="btn btn-dark">Edit</button>
                <button id="deleteBtn" class="btn btn-dark">Delete</button>
            </div>
            <div class="text-center">
                <h3>Comments</h3>
                {{#each comments as |coment|}}
                <div>
                    <p>{{comment.comment_body}} by {{comment.user.name}} on {{format_date date_created}}</p>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

{{> comment-form}}

<script src="../public/js/newCommentHandler.js"></script>
<script src="../public/js/deleteBlogPost.js"></script>
<script src="../public/js/editBlogPost"></script>
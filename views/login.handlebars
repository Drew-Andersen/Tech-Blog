{{!-- Login / Sign-up Page --}}

<div class="container">
    <div class="row">
{{!-- Login --}}
        <div class="col-med-6">
            <h2>Login</h2>
            <form class="form login-form">
                <div class="form-group mb-2">
                    <label for="email-login" class="form-label">Email:</label>
                    <input id="email-login" class="form-control" type="text" />
                </div>
                <div class="form-group mb-2">
                    <label for="password-login">Password:</label>
                    <input class="form-control" type="password" id="password-login" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-dark">Login</button>
                </div>
            </form>
        </div>

{{!-- Sign-up --}}
        <div class="col-md-6">
            <h2>Signup</h2>
            <form class="form signup-form">
                <div class="form-group mb-2">
                    <label for="name-signup">Name:</label>
                    <input id="name-signup" class="form-control" type="text" />
                </div>
                <div class="form-group mb-2">
                    <label for="email-signup">Email:</label>
                    <input id="email-signup" class="form-control" type="text" />
                </div>
                <div class="form-group mb-2">
                    <label for="password-signup">Password:</label>
                    <input id="password-signup" class="form-control" type="password" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-dark">Signup</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="../public/js/login.js"></script>
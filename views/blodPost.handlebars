{{!-- Blog Post Page --}}
<div class="container">
    <div class="row">
        <div class="card shadow blogPost-main">
            <div class="text-center">
                <h2>{{title}}</h2>
                <p>Created by: {{user.name}} on {{format_date date_created}}</p>
                <p>{{description}}</p>
                <button id="editBtn" class="btn btn-dark">Edit</button>
                <button id="deleteBtn" class="btn btn-dark">Delete</button>
            </div>
            <div class="text-center">
                <h3>Comments</h3>
                {{#each comments as |coment| }}
                <div>
                    <p>{{comment.comment_body}} by {{user.name}} on {{format_date date_created}}</p>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

